{
	"$schema": "https://biomejs.dev/schemas/1.8.2/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"indentWidth": 2
	},
	"files": {
		"ignore": [
			"node_modules",
			"dist",
			".next",
			".husky",
			".git",
			".idea",
			".vscode"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noBannedTypes": "off"
			},
			"style": {
				"useImportType": "off"
			},
			"suspicious": {
				"noExplicitAny": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"semicolons": "asNeeded",
			"trailingComma": "all",
			"jsxQuoteStyle": "double",
			"quoteStyle": "double",
			"bracketSpacing": true,
			"arrowParentheses": "always",
			"indentWidth": 2,
			"indentStyle": "space",
			"lineWidth": 120
		}
	}
}
